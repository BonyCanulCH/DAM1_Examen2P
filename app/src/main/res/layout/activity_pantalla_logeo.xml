<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PantallaLogeo">

    <TextView
        android:id="@+id/notificacion"
        android:text="@string/txt_datos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/imv_opcpizza"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/notificacion"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="101dp"
        android:layout_marginEnd="83dp"
        android:src="@drawable/pizzas" />

    <ImageView
        android:id="@+id/imv_opcbebida"
        android:layout_width="140dp"
        android:layout_height="130dp"
        android:layout_below="@id/notificacion"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="106dp"
        android:layout_marginEnd="38dp"
        android:src="@drawable/bebida" />

    <TextView
        android:id="@+id/opc1"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_below="@id/imv_opcpizza"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="149dp"
        android:layout_marginBottom="355dp"
        android:layout_toStartOf="@+id/opc2"
        android:gravity="center"
        android:text="@string/txt_opc1" />

    <TextView
        android:id="@+id/opc2"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_below="@id/imv_opcbebida"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="81dp"
        android:layout_marginBottom="353dp"
        android:gravity="center"
        android:text="@string/txt_opc2" />

</RelativeLayout>