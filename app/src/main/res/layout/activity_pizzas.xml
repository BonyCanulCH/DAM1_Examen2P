<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pizzas">



    <ImageView
        android:id="@+id/pizza1"
        android:layout_marginTop="15dp"
        android:layout_width="114dp"
        android:layout_height="114dp"
        android:layout_marginLeft="27dp"
        app:srcCompat="@drawable/pizzatradicional" />

    <TextView
        android:layout_width="180dp"
        android:layout_height="22dp"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="594dp"
        android:background="@color/white"
        android:text="@string/pizza1"
        android:textSize="17dp" />

    <ImageView
        android:id="@+id/pizza2"
        android:layout_width="159dp"
        android:layout_height="159dp"
        android:layout_below="@id/pizza1"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/pizzahawaiana" />

    <TextView
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="481dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="@string/pizza2"
        android:textSize="17dp" />

    <ImageView
        android:id="@+id/pizza3"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/pizza2"
        app:srcCompat="@drawable/pizzavegetariana" />

    <TextView
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="340dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="340dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="@string/pizza3"
        android:textSize="17dp" />

    <EditText
        android:id="@+id/edtpizza"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="261dp"
        android:layout_toStartOf="@+id/editpreciopizza"
        android:background="@color/white"
        android:hint="@string/nombpza" />

    <EditText
        android:id="@+id/editpreciopizza"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="78dp"
        android:layout_marginBottom="262dp"
        android:background="@color/white"
        android:hint="@string/camprecio"/>

    <Button
        android:id="@+id/buttonnext"
        android:layout_width="155dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="180dp"
        android:text="@string/sgte"
        android:textColor="#000000" />

    <Button
        android:id="@+id/buttonback"
        android:layout_width="155dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="182dp"
        android:layout_toStartOf="@+id/buttonnext"
        android:text="@string/inicio"
        android:textColor="#000000" />

</RelativeLayout>